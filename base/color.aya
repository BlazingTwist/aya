    {"35C62A" color.newhex.hsv 100*./} [[11577 79 78]] ts+
    {"35C62A" color.newhex.hex} ["35c62a"] ts+
    {"ff00ff" color.newhex.hex} ["ff00ff"] ts+
    {colors.red colors.blue.mid.rgb} [[127 0 127]] ts+
    {3 colors.blue colors.yellow.grad .FS} [1146] ts+

    ts __aya__.addtest
}
