.# A basic account object

{,

  {name,
    {, 0:balance name:name} account MO
  }:__new__;

  {amnt self,
    self.balance amnt + self.:balance ;
  }:deposit;

  {amnt self,
    amnt self.balance > {
      "insufficient funds on account $(self.name)" .D
    } ?
    self.balance amnt - self.:balance ;
  }:withdrawl;

  {self,
    "$(self.name): \$$(self.balance)"
  }:__repr__:__str__;

}:account;


