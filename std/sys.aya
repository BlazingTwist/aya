.#? sys.iswindows\n  returns true if system is windows
def sys::iswindows {:9c"\\"=}


.# ::str sys.cd\n  set working directory
def sys::cd {dirname,
    dirname
    .# If it is a string, conv to path
    dirname :T ::str = { path! } ?
    P 3:{sys.MZ}
}


.#? ::str sys.mkdir\n  create a new directory
